{
  "$id": "EIBowJmxx5hNWQlfXqGcbN0aP_RBuucMW6mle4tAN6TL",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GSMA Governance Credential",
  "description": "Self-issued credential identifying GSMA as the vetter certification governance authority. Sprint 62.",
  "credentialType": "GSMAGovernanceCredential",
  "type": "object",
  "required": ["v", "d", "i", "ri", "s", "a"],
  "properties": {
    "v": { "type": "string", "description": "Version string" },
    "d": { "type": "string", "description": "SAID of credential" },
    "i": { "type": "string", "description": "Issuer AID (GSMA)" },
    "ri": { "type": "string", "description": "Registry identifier" },
    "s": { "type": "string", "description": "Schema SAID" },
    "a": {
      "oneOf": [
        { "type": "string", "description": "SAID of attributes block" },
        {
          "type": "object",
          "required": ["d", "i", "dt", "name", "role"],
          "properties": {
            "d": { "type": "string", "description": "SAID of attributes" },
            "i": { "type": "string", "description": "Issuee AID (self-referencing GSMA AID)" },
            "dt": { "type": "string", "format": "date-time", "description": "Issuance datetime" },
            "name": { "type": "string", "const": "GSMA", "description": "Organization name" },
            "role": { "type": "string", "const": "Vetter Governance Authority", "description": "Governance role" }
          },
          "additionalProperties": false
        }
      ]
    }
  },
  "additionalProperties": true
}
